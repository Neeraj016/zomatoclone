{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
